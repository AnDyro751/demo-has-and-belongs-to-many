<%= simple_form_for(fulfillment_center, local: true) do |form| %>
  <% if fulfillment_center.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(fulfillment_center.errors.count, "error") %> prohibited this fulfillment_center from being
        saved:</h2>

      <ul>
        <% fulfillment_center.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.input :name %>
  </div>

  <div class="field">
    <%= form.input :description %>
  </div>


  <div class="field">
    <%= form.input :product_ids,
                   collection: Product.all,
                   input_html: {class: "js-multiple", multiple: true},
                   label: "Selecciona los productos"

    %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
